      "name": "General",
      "children": [
        {
          "type": "checkbox",
          "name": "receive_emails",
          "label": "Receive emails from us",
          "default": true
        }
      ]
    },
    {
      "type": "section",
      "name": "Activity Feed",
      "children": [
        {
